<?xml version="1.0" encoding="utf-8"?>

<root xmlns:android="http://schemas.android.com/apk/res/android">
	<trace enable="true"/>
	<init>
		<log text="android extern_types init"/>
	</init>

	<androidManifestUpdates>
		<addPermission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
		<addPermission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/> 
		<addPermission android:name="externTypes.externTypes_android_service.PERMISSION_BIND"/>
		<addElements tag="queries">
				<package android:name="externTypes.externTypes_android_service" />
		</addElements>

		<addElements tag="application">
		</addElements>

	</androidManifestUpdates>

	<resourceCopies>
		<copyDir src="$S(PluginDir)/buildsystem" dst="$S(BuildDir)/gradle/buildsystem" />
		<copyDir src="$S(PluginDir)/../../../../android/externTypes/externTypes_android_service" dst="$S(BuildDir)/JavaLibs/externTypes_android_service" />
		<copyDir src="$S(PluginDir)/../../../../android/externTypes/externTypes_android_client" dst="$S(BuildDir)/JavaLibs/externTypes_android_client" />
		<copyDir src="$S(PluginDir)/../../../../android/externTypes/externTypes_api" dst="$S(BuildDir)/JavaLibs/externTypes_api" />
		<copyDir src="$S(PluginDir)/../../../../android/externTypes/externTypes_android_messenger" dst="$S(BuildDir)/JavaLibs/externTypes_android_messenger" />
		<copyDir src="$S(PluginDir)/../../../../android/externTypes/externTypes_impl" dst="$S(BuildDir)/JavaLibs/externTypes_impl" />
		<copyDir src="$S(PluginDir)/../../../../android/externTypes/externTypesjniservice" dst="$S(BuildDir)/src/externTypesjniservice" />
		<copyDir src="$S(PluginDir)/../../../../android/externTypes/externTypesjniclient" dst="$S(BuildDir)/src/externTypesjniclient" />
	</resourceCopies>

	<baseBuildGradleAdditions>
		<addElements tag="buildscript">
			<insertValue value="apply from: 'buildsystem/config.gradle'"/>
			<insertValue value="apply from: 'buildsystem/dependencies.gradle'"/>
			<insertNewline/>
		</addElements>
	</baseBuildGradleAdditions>

	<settingsGradleAdditions>
		<insert>
			<![CDATA[
      include ':externTypes_api'
      include ':externTypes_impl'
      include ':externTypes_android_service'
      include ':externTypes_android_client'
      include ':externTypes_android_messenger'
    ]]>
		</insert>
	
	</settingsGradleAdditions>

	<buildGradleAdditions>
		<insert>
            <![CDATA[
                dependencies {
                implementation project(':externTypes_api')
                implementation project(':externTypes_impl')
                implementation project(':externTypes_android_service')
                implementation project(':externTypes_android_client')
                implementation project(':externTypes_android_messenger')
                }
            ]]>
        </insert>
		<insert>
			<![CDATA[
tasks.configureEach { task ->
	if (task.name == 'assembleDebug') {
		task.dependsOn ':externTypes_api:assembleDebug'
		task.dependsOn ':externTypes_impl:assembleDebug'
		task.dependsOn ':externTypes_android_service:assembleDebug'
		task.dependsOn ':externTypes_android_client:assembleDebug'
		task.dependsOn ':externTypes_android_messenger:assembleDebug'
	}
	if (task.name == 'assembleRelease') {
		task.dependsOn ':externTypes_api:assembleRelease'
		task.dependsOn ':externTypes_impl:assembleRelease'
		task.dependsOn ':externTypes_android_service:assembleRelease'
		task.dependsOn ':externTypes_android_client:assembleRelease'
		task.dependsOn ':externTypes_android_messenger:assembleRelease'
	}
}

]]>
		</insert>
	</buildGradleAdditions>


	<proguardAdditions>
		<insert>
		</insert>
	</proguardAdditions>



	<!-- optional additions to the GameActivity class in GameActivity.java -->
	<gameActivityClassAdditions>
	</gameActivityClassAdditions>


	<!-- optional additions to GameActivity onCreate in GameActivity.java -->
	<gameActivityOnCreateAdditions>
		<insert>
			<![CDATA[
		]]>
		</insert>
	</gameActivityOnCreateAdditions>


</root>