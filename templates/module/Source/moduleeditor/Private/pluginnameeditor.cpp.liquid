{% assign module_name_capital = module.name|capital %}
{% assign module_name_capital_label = "ApiGear " | append: module_name_capital %}
{% assign module_name = "F"| append: module_name_capital | append: "EditorModule" %}

#include "{{module_name_capital}}Editor.h"
#include "ISettingsModule.h"
#include "{{module_name_capital}}Settings.h"

#define LOCTEXT_NAMESPACE "{{module_name_capital}}Editor"

void {{module_name}}::StartupModule()
{	
	// register settings
	ISettingsModule* SettingsModule = FModuleManager::GetModulePtr<ISettingsModule>("Settings");

	if (SettingsModule != nullptr)	
	{
		SettingsModule->RegisterSettings("Project", "Plugins", "{{module_name_capital_label}}",
			LOCTEXT("{{module_name_capital}}SettingsName", "{{module_name_capital_label}}"),
			LOCTEXT("{{module_name_capital}}SettingsDescription", "Project settings for {{module_name_capital_label}} plugin"),
			GetMutableDefault<U{{module_name_capital}}Settings>()
		);
	}
}

void {{module_name}}::ShutdownModule()
{
	// unregister settings
	ISettingsModule* SettingsModule = FModuleManager::GetModulePtr<ISettingsModule>("Settings");

	if (SettingsModule != nullptr)
	{
		SettingsModule->UnregisterSettings("Project", "Plugins", "{{module_name_capital_label}}");
	}
}

IMPLEMENT_MODULE({{module_name}}, {{module_name_capital}}Editor)

#undef LOCTEXT_NAMESPACE
